- if current_user.facebook_friends.any?
  %h4.friend-title#headingTwo
    Facebook Connections
    %span.badge #{current_user.facebook_friends.count}
  - for friend in current_user.facebook_friends
    .friend-panel-info
      = friend.name
      = link_to("Send Friend Request", friendships_path(uid: friend.uid), method: :post, class: "btn btn-xs btn-success")