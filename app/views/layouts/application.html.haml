!!! 5
%html{ng: {app: "cotrippingApp"}}
  %head
    %title Co:tripping
    %meta{property: "og:site_name", content: "co:tripping"}
    %meta{property: "og:title", content: "Travel is more fun with friends."}
    %meta{property: "og:url", content: "http://www.cotripping.com"}
    %meta{property: "og:image", content: "#{image_url("logos/facebook-logo.png")}"}
    %meta{property: "og:description", content: "Whether you travel for business or pleasure, co:tripping makes the world a smaller place by connecting you with friends at every destination."}
    %meta{property: "fb:app_id", content: "#{ENV['FACEBOOK_APP_ID']}"}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1, maximum-scale=1"}

    = stylesheet_link_tag 'application', media: 'all'
    = include_gon
    = javascript_include_tag 'application'
    = csrf_meta_tags

  %body{class: "#{params[:controller]}-#{params[:action]}"}
    = render "layouts/header"
    #content.container.main
      = yield
    = render "layouts/footer"
